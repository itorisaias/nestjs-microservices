  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest Framework - Module A",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/apps/module-a/src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/apps/module-a/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector"
      // "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
